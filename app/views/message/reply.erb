<div class="container">
<div class="row">

<div class="col-md-2"></div>

<div class="col-md-8">
  <form class="form-horizontal" action="/message/write_process" method="POST">
    <fieldset>
       <div class="form-group">
        <label for="inputprofessor" class="col-lg-2 control-label" style="font-size: 20px; height: 39px;" id="menu_font">보내는 사람</label>
         <div class="col-lg-10">
          <input type="text" class="form-control" name="sender" style="font-size: 18px;" id="menu_font_t" value="<%=User.find(@reply_message.receiver).student_name%> (<%=User.find(@reply_message.receiver).student_number%>)" disabled>
        
        </div>
      </div>
      
      <div class="form-group">
        <label for="select" class="col-lg-2 control-label" style="font-size: 20px;" id="menu_font">받는사람</label>
        <div class="col-lg-10">
          <input type="text" class="form-control" style="font-size: 18px;" id="menu_font_t" value="<%=User.find(@reply_message.sender).student_name%> (<%=User.find(@reply_message.sender).student_number%>)" disabled >
          <input type="hidden" name="receiver" value="<%=User.find(@reply_message.sender).id%>">
        </div>
      </div>
      
      <div class="form-group">
         <label for="inputpurpose" class="col-lg-2 control-label" style="font-size: 20px;" id="menu_font">내용</label>
        <div class="col-lg-10">
            <textarea class="form-control" rows="3" name="content" placeholder="답장을 써주세요" style="font-size: 18px;" id="menu_font_t" required></textarea>
        </div>
      </div>
     
      <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
          <a href="/book/mypage" class="btn btn-default" style="text-align: center; font-size: 18px;" id="menu_font">Cancel</a>
         <!--<button type="reset" class="btn btn-default"  style="font-size: 18px" id="menu_font">Cancel</button>-->
         <button type="submit" class="btn btn-primary"  style="font-size: 18px" id="menu_font">쪽지 보내기</button>
        </div>
      </div>
    </fieldset>
  </form>
</div>
<div class="col-md-2"></div>

</div>
